<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.muhayu.syjeongboard.mapper.UserMapper">


    <insert id="userInsert" parameterType="User">
        insert into user('email', 'nickname', 'password')
        values (#{email}, #{nickname}, #{password})
    </insert>

    <select id="checkPassword" resultType="User">
        select email, nickname, password from user where email = #{email} and password = #{password}
    </select>

    <select id="selectUser" resultType="User">
        select * from user where email = #{email};
    </select>
</mapper>